@model IEnumerable<ST10070933PROG7311.Models.Product>
@{
    ViewData["Title"] = "Filter Products";
}

<div class="container py-4">
    <h4 class="mb-4">Filter Products</h4>

    <form method="get" asp-action="FilterProducts" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="category" class="form-control" placeholder="Category (e.g., Fruit)" />
        </div>
        <div class="col-md-3">
            <input type="date" name="fromDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <input type="date" name="toDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-dark w-100">Search</button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No products found matching your criteria.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover bg-white">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Production Date</th>
                        <th>Farmer</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.ProductionDate.ToShortDateString()</td>
                            <td>@item.Farmer.FirstName @item.Farmer.LastName</td>
                            <td>@item.Farmer.Location</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>