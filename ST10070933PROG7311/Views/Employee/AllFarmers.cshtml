@model IEnumerable<ST10070933PROG7311.Models.Farmer>
@{
    ViewData["Title"] = "All Farmers";
}

<div class="container py-4">
    <h4 class="mb-4">All Farmers</h4>

    <a asp-action="AddFarmer" class="btn btn-dark mb-3">+ Add Farmer</a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No farmer profiles found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover bg-white">
                <thead class="table-light">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Farm Name</th>
                        <th>Location</th>
                        <th>Contact</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var farmer in Model)
                    {
                        <tr>
                            <td>@farmer.FirstName</td>
                            <td>@farmer.LastName</td>
                            <td>@farmer.FarmName</td>
                            <td>@farmer.Location</td>
                            <td>@farmer.ContactNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>