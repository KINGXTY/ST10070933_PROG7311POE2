@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Welcome to Agri-Energy Connect</</h1>
        <p class="fs-5">A platform to connect Farmers and Employees for efficient product and profile management.</p>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-center">
            <p class="mb-4">You're logged in as <strong>@User.Identity.Name</strong>.</p>

            @if (User.IsInRole("Farmer"))
            {
                <a asp-controller="Farmer" asp-action="AddProduct" class="btn btn-primary me-2">Add Product</a>
                <a asp-controller="Farmer" asp-action="MyProducts" class="btn btn-outline-primary">My Products</a>
            }
            else if (User.IsInRole("Employee"))
            {
                <a asp-controller="Employee" asp-action="AllFarmers" class="btn btn-primary me-2">Manage Farmers</a>
                <a asp-controller="Employee" asp-action="FilterProducts" class="btn btn-outline-primary">Filter Products</a>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <a asp-controller="User" asp-action="Login" class="btn btn-primary me-2">Login</a>
            <a asp-controller="User" asp-action="Register" class="btn btn-outline-primary">Register</a>
        </div>
    }

    <hr class="my-5" />

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <h5>Add & Manage Farmers</h5>
            <p>Easily create and maintain farmer profiles including contact and farm info.</p>
        </div>
        <div class="col-md-4 mb-4">
            <h5>Add Agricultural Products</h5>
            <p>Farmers can submit new produce with details like category and production date.</p>
        </div>
        <div class="col-md-4 mb-4">
            <h5>Filter Products</h5>
            <p>Employees can search products by category and date for better decision-making.</p>
        </div>
    </div>
</div>
